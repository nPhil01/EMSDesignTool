<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                    android:color="#000a5800" />
            <stroke
                    android:width="5dp"
                    android:color="#00ffffff" />
            <corners
                    android:radius="4dp" />
            <padding
                    android:left="5dp"
                    android:right="5dp"
                    android:bottom="5dp"
                    android:top="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                    android:startColor="#0019dc00"
                    android:endColor="#0013a400"
                    android:angle="270"/>
            <stroke
                    android:width="5dp"
                    android:color="#00ffffff" />
            <corners
                    android:radius="4dp" />
            <padding
                    android:left="5dp"
                    android:right="5dp"
                    android:bottom="5dp"
                    android:top="5dp" />
        </shape>
    </item>

</selector>