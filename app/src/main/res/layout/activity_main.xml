<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="com.example.emsdesigntool.MainActivity">

    <LinearLayout android:orientation="vertical" android:layout_width="0dp"
        android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <Button android:text="Create new gestures" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/button6" android:onClick="newGestureView" />
        <Button android:text="Load gestures" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/button7" android:onClick="loadGestureView" />
        <Button android:text="Settings" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/button8" android:onClick="settingsView" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
